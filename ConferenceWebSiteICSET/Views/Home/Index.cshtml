@{
    ViewData["Title"] = "Home";
}


<section class="header">
    <div class="container">
        <div class="header-matter">
            <h2>WELCOME TO <span>ICCSI</span></h2>
            <h3>International Conference on Computer <br />Science Innovations</h3>
            <div class="headabo">
                <p>
                    A global platform for researchers, academicians, and industry experts to explore 
                    advancements in AI, Machine Learning, Cybersecurity, IoT, Blockchain, Cloud Computing, 
                    and Data Science, driving digital transformation and innovation.
                </p>
            </div>
            <!-- Register Button -->
            <div class="register">
                <a class="headregister" asp-action="New_paper_submission" asp-controller="Authors_Desk">Register</a>
            </div>
            <a href="#about" class="scroll">
                <img src="/img/down.png" class="scroll-icon" alt="Scroll Down" />
            </a>
        </div>
    </div>
</section>


<!--content(about)-->
<section class="content">
    <div class="container">
        <div class="about" id="about">
            <div class="about-left">
                <img class="red" src="~/img/about.jpg" alt="About Us Image" />
            </div>
            <div class="left-about">
                <small>ABOUT US</small>
                <p>
                    The International Conference on Computer Science Innovations (ICCSI) is a leading global 
                    platform that brings together researchers, academicians, and industry professionals to 
                    explore advancements in computing and technology. Covering fields such as Artificial 
                    Intelligence, Machine Learning, Cybersecurity, Cloud Computing, Blockchain, IoT, 
                    and Data Science, ICCSI fosters innovation and collaboration. The conference 
                    features keynote sessions, research presentations, panel discussions, and 
                    workshops, providing opportunities for knowledge exchange and networking. 
                    With a focus on emerging technologies and real-world applications, ICCSI 
                    aims to drive digital transformation and shape the future of computing 
                    across industries. Join us to be part of this innovation-driven event!
                </p>
            </div>
        </div>
    </div>
</section>


<!--keydates-->
<div class="key-dates-container">

    <div class="keyheading">
        <h3>TAKE A LOOK AT OUR <span>KEY DATES</span> </h3>
    </div>

